<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_main"
    android:layout_width="match_parent"
    android:layout_height="54dp">


    <ImageView
        android:id="@+id/station_image_const"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/station_image"
        app:layout_constraintBottom_toBottomOf="@+id/station_genre_const"
        app:layout_constraintEnd_toStartOf="@+id/station_title_const"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/station_title_const" />

    <TextView
        android:id="@+id/station_title_const"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:ellipsize="end"
        android:fontFamily="@font/lato_bold"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/station_image_const"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/station_genre_const"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/lato"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/subtitleColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/station_image_const"
        app:layout_constraintTop_toBottomOf="@+id/station_title_const" />


</androidx.constraintlayout.widget.ConstraintLayout>